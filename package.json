{
  "name": "rpb",
  "version": "0.0.0",
  "description": "PouchDB demo with local storage (built with Parcel)",
  "author": {
    "name": "Robin Millette",
    "email": "robin@millette.info",
    "url": "http://robin.millette.info"
  },
  "engines": {
    "node": ">= 10"
  },
  "license": "AGPL-3.0",
  "scripts": {
    "build": "healthier && parcel build --no-source-maps --public-url ./ index.html",
    "clean": "rm -fr .cache dist",
    "deploy": "npm run clean && npm run build && gh-pages -d dist",
    "start": "CHOKIDAR_USEPOLLING=yes parcel index.html # workaround https://github.com/parcel-bundler/parcel/issues/1743#issuecomment-441278085",
    "test": "healthier"
  },
  "dependencies": {
    "pouchdb-all-dbs": "^1.0.2",
    "pouchdb-browser": "^7.0.0"
  },
  "devDependencies": {
    "acorn": "^6.1.1",
    "gh-pages": "^2.0.1",
    "healthier": "^2.0.0",
    "husky": "^2.4.0",
    "lint-staged": "^8.2.0",
    "parcel-bundler": "^1.12.3",
    "parcel-plugin-static-files-copy": "^2.1.2",
    "prettier": "^1.18.2"
  },
  "lint-staged": {
    "*.{html,js,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "semi": false,
    "trailingComma": "es5",
    "arrowParens": "always"
  }
}
